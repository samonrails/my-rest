%fieldset
  .row-fluid
    .span3
      = f.input :min_participation, :required => false, :label => "Minimum Participation"
    .span3
      = f.input :cogs, :required => false, :label => "COGS"
    .span3
      = f.input :retail_price, :required => false
      = f.hidden_field :_destroy, :class => "_destroy"
    .span3.no-label-push
      = link_to '#', class: "remove_fields btn btn-danger" do
        %i.icon.icon-remove.icon-white