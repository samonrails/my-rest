.section-header
%h1
  #{@level}(#{@product_type})
%h3
  Vendor: #{@vendor.name}
%h4 
  Generated: #{Time.now.strftime("%Y-%m-%d %I:%M:%S %p")}
  %br
  Generated By:
  - unless current_user.nil?
    #{current_user.name} (#{current_user.email})
  %br

%br

%br

.results
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th Given By
        %th Rating
        %th Review
        %th Account
        %th EventID
        %th Reviewed

      - @events.each_with_index do |event,i|
        - review = average_rating(event.event_reviews.map(&:rating))
        - if review and (@rating.nil? or review.round(0) == @rating)
          - last_reviewed = event.event_reviews.last

          %tr
            %td
              = last_reviewed.contact.name if last_reviewed.contact
            %td
              = review
            %td
              = last_reviewed.content
            %td
              = link_to event.account.name, account_url(event.account)
            %td
              = link_to event.pretty_id, event_url(event.id)
            %td
              = last_reviewed.updated_at.strftime("%m/%d/%y")