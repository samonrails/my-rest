.section-header
%h1
  Bar Graph Reviews
%h2
  #{@level}(#{@product_type})
%h3
  Vendor: #{@vendor.name}
%h4 
  Generated: #{Time.now.strftime("%Y-%m-%d %I:%M:%S %p")}
  %br
  Generated By:
  - unless current_user.nil?
    #{current_user.name} (#{current_user.email})
  %br

%br

%br

.results
  %table.table.table-striped.table-condensed
    %thead
      %tr
        - if @level == "Aggregate Item Level Food Ratings"
          %th Item Name
          %th SKU
        - else
          %th EventID
          %th Event Name
        %th # of 5 star reviews
        %th # of 4 star reviews
        %th # of 3 star reviews
        %th # of 2 star reviews
        %th # of 1 star reviews
        %th Average Score
        %th Total number of reviews

      - if @level == "Aggregate Item Level Food Ratings"
        - @items.each do |item|
          - reviews_array = item.reviews.map(&:rating)
          - review = average_rating(reviews_array)
          - if review
            - ratings = []
            - (1..5).each do |i|
              - ratings << reviews_array.count{|r| r == i}
            - ratings.reverse!
            %tr
              %td
                = link_to item.name_public.titleize, edit_vendor_inventory_item_url(@vendor, item)
              %td
                = item.sku
              %td
                = ratings[0]
              %td
                = ratings[1]
              %td
                = ratings[2]
              %td
                = ratings[3]
              %td
                = ratings[4]
              %td
                = review
              %td
                = reviews_array.size
      - else
        - @events.each_with_index do |event,i|
          - reviews_array = []
          - if @level == "Event Level Food Ratings"
            - reviews_array = event.event_reviews.map(&:rating)
          - else
            - reviews_array = event.event_ratings.select{|e| e.additional_event_ratings == @level}.map(&:rating)
          - review = average_rating(reviews_array)
          - if review
            - ratings = []
            - (1..5).each do |i|
              - ratings << reviews_array.count{|r| r == i}
            - ratings.reverse!
            %tr
              %td
                = link_to event.pretty_id, event_url(event.id)
              %td
                = event.name
              %td
                = ratings[0]
              %td
                = ratings[1]
              %td
                = ratings[2]
              %td
                = ratings[3]
              %td
                = ratings[4]
              %td
                = review
              %td
                = reviews_array.size
