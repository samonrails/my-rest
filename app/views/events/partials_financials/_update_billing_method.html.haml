.modal-wrapper
  = form_tag update_transaction_method_event_path, remote: true do
    = hidden_field_tag 'party_id', party.id
    = hidden_field_tag 'party_type', party.class.name
    .modal-header
      %button.close{:type=>"button","data-dismiss"=>"modal"}
        &times;

      %h3 Update Billing Method

    .modal-body
      %h4 #{party.name}
      =select_tag 'transaction_method', options_for_select(["ACH", "Corp Acct"], event_transaction_method.transaction_method)

    .modal-footer
      = submit_tag "Update Billing Method", :class => "btn btn-primary"