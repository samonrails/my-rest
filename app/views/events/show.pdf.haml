.pdf
  .grid-full
    /
      This h1 is using a css background image for alignment purposes,
      but to remain semantic we are still including a hidden Fooda logo name
    %h1.logo
      %span.hidden Fooda
    %h2.sub-title
      www.fooda.com
    - if (!@pricing_is_at_item_level && @show_prices) 
      .menu-pricing-title
        Menu Price
      .pricing-at-menu-level
        %span> $
        = @event.menu_level_sell_price
    .menu.center-margin
      %h2.menu-name
        = @event.menu_name
      %h4.menu-cuisine
        = @cuisine
      %img{:alt => "Company logo here.", :src => @logo_url}/
    .pdf-grid
      - MealType.available_values.each do |mealtype|
        %h1.category-title{:class => mealtype.underscore.downcase}
          = MealType.friendly_name mealtype
        /-- The following is for the first section
        - if mealtype == "combinations"
          .item-wrapper{:style => "border: 5px #000 dotted;"}
        - else
          .item-wrapper{:style => "margin-bottom: 40px;"}
        .inner-wrapper
          - @event.menu_items.each do |item|
            - if item.inventory_item.meal_type == mealtype
              .individual-item
                .item-title
                  %span
                    = item.inventory_item.name
                    - item.inventory_item.tag_list.each do |tag|
                      %span.item-tag
                        = tag
                .item-price
                - if (@pricing_is_at_item_level && @show_prices) 
                  = item.sell_price
                .item-description
                  = item.inventory_item.description
                    - item.inventory_item.option_list.each do |option|
                    %span.option-tag
                      = option
.footer
  %h3{:style => "position: relative; left: 600px; top: 70px; text-transform: uppercase; color: #262626; font-weight: bold;"} * prices do not include tax
