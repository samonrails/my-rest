
:css
  /* ==========
  = NOTES
  ============= */
  /* Images are required to be hosted using a fully qualified URL */
                  
  /* ==========
  = Resets
  ============= */
  body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,p,blockquote,th,td {margin:0; padding:0;}
  table {border-collapse:collapse; border-spacing:0;}
  fieldset,img {border:0;}
  address,caption,cite,code,dfn,em,strong,th,var {font-style:normal; font-weight:normal;}
  ol,ul {list-style:none;}
  caption,th {text-align:left;}
  abbr,acronym { border:0;}

  /* [at][at]page is the syntax that docraptr uses, but because 
  this is within Razor syntax we have to append it with another at sign.  
  This allows it to simply output the [at]page definition, to which we can then set properties on. */
  @page {
      size: arch-c;
      background: url('http://i.imgur.com/T8lmVee.jpg'); 
  }

  body {
      position: relative;
      background: #fff;
      margin: 0px;
      padding: 0px;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 12px;    
  }

  /* ==========
  = Header
  ============= */
  .pdf {
      overflow: hidden;
      height: 2000px;
      width: 1488px;
  }

   
  /* ==========
  = Main Content
  ============= */
  .item-wrapper {
      position: relative;
      width: 1300px;
      height: 100%;
      overflow: hidden;
      text-align: center;
      margin: 0 auto;
      margin-bottom: 20px;
  }

  /* ==============
  = Inside Content
  ================= */
  .inner-wrapper {
      height: 100%;
      text-align: left;
      margin: 20px 20px;
      padding-top: 40px;
      padding-bottom: 20px;
      display: block;
  }

  .individual-item {
      width: 550px;
      margin: 0 20px 20px 20px;
      overflow: auto;
      float: left;    
      min-height: 80px;
  }
  .item-title {
      width: 500px;
  }

  .item-description {
      width: 600px;
  }
  .item-description {
      width: 500px;
  }

  .item-title {
      font-size: 25px;
      text-transform: uppercase;
      color: #262626;
      float: left;
      font-weight: bold;
      font-family: sans-serif;
  }

  .item-description {
      font-size: 18px;
      color: #666666;
      font-family: 'Segoe UI';
      font-style: italic;
      display: block;
  }
  
  .item-tag {
      background: #929292;
      margin-right: 2px;
      font-size: 14px;
      color: #fff;
      padding: 4px 4px 4px 4px;
      -webkit-border-radius: 10px;
      border-radius: 10px; 
      position: relative;
      top: -3px;
  }
  .item-price {
      color: #f26522;
      font-size: 20px;
      float: right;
      font-family: cursive;
  }

  .tasty-extras {
      page-break-before: avoid;  
  }

