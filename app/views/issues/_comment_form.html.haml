= simple_form_for [@issue, @issue.comments.build] do |f|
  = f.input :description, input_html: {class: 'issue_container', rows: 8}, label: "Write a new comment"
  = f.hidden_field :user_id, value: current_user.id
  = f.submit "Comment", class: "btn btn-success"
  = link_to @issue.status? ? "Reopen" : "Close", toggle_issue_path(@issue), class: "btn btn-danger", :id => "close_issue"
