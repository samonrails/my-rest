.section-header
%h1
  #{@event_review_type.titleize} Reviews (#{@product_type})
%h4 
  Generated: #{Time.now.strftime("%Y-%m-%d %I:%M:%S %p")}
  %br
  Generated By:
  - unless current_user.nil?
    #{current_user.name} (#{current_user.email})
  %br

%br
%br

.results
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th Given By
        %th Rating
        %th Account
        %th Restaurants
        %th EventID
        %th Reviewed

      - @reviews.each do |review|
        %tr
          %td
            = review.contact.name if review.contact
          %td
            = review.rating
          %td
            = review.reviewable.account.name
          %td
            = review.reviewable.vendors.map(&:name).join(',')
          %td
            = link_to review.reviewable.pretty_id, event_url(review.reviewable.id)
          %td
            = review.updated_at.strftime("%m/%d/%y")
