.pull-right= link_to_modal new_admin_delivery_group_path, text: "Add Delivery Group", button: "success", icon: "plus-sign"

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Location
      %th Edit
      %th Delete

    %tbody
      - current_user.delivery_groups.each do |dg|
        %tr
          %td= dg.name
          %td= dg.displayable_locations
          %td= link_to_modal edit_admin_delivery_group_path(dg), button: "primary", icon: "edit"
          %td= link_to_modal admin_delivery_group_path(dg), button: "danger", icon: "remove", delete: true

%script#delivery-group-template{type: "text/x-handlebars-template"}
  :plain
    <tr data-id="{{id}}">
      <td>
        <strong>{{account}}</strong>
        ({{location}})
      </td>
      <td class="priority">{{num}}</td>
      <td>
        <button class="close delete" type="button">&times;</button>
      </td>
    </tr>
