.modal.hide.fade{"id"=>"new_email_form"}
  = render :partial => "/admin/emails/new", :locals => {email: Email.new}

.row
  .span12
    .pull-right.admin-buttons
      %a.btn.btn-success.btn-small.toggle-modal{"data-target"=>"#new_email_form"}
        %i.icon.icon-plus.icon-white.toggle-modal{"data-target"=>"#new_email_form"}
