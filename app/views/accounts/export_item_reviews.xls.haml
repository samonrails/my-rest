.section-header
%h1
  #{@level}(#{@product_type})
%h3
  Account: #{@account.name}
%h4 
  Generated: #{Time.now.strftime("%Y-%m-%d %I:%M:%S %p")}
  %br
  Generated By:
  - unless current_user.nil?
    #{current_user.name} (#{current_user.email})
  %br

%br

%br

.results
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th Given By
        %th Rating
        %th Review
        %th Account
        %th EventID
        %th Sku
        %th Reviewed

      - @reviews.each do |review|
        %tr
          %td
            = review.contact.name if review.contact
          %td
            = review.rating
          %td
            = review.content
          %td
            = link_to review.event.account.name, account_url(review.event.account)
          %td
            = link_to review.event.pretty_id, event_url(review.event)
          %td
            = review.reviewable.sku
          %td
            = review.updated_at.strftime("%m/%d/%y")