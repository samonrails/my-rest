.page-header
  %h1 Pricing Tier Listings
  = link_to 'New Pricing Tier', new_pricing_tier_path, :class => "btn btn-primary pull-right", :style => "margin-top: -30px;"
%table
  %tr
    %th Name
    %th Percentage Above Cost
    %th Actions
  - @pricing_tiers.each do |pricing_tier|
    %tr
      %td= pricing_tier.name
      %td= pricing_tier.gross_profit
      %td
        = link_to 'Show', pricing_tier
        = link_to 'Edit', edit_pricing_tier_path(pricing_tier)
        = link_to 'Destroy', pricing_tier, method: :delete, data: { confirm: 'Are you sure?' }
        / = link_to 'Notes', notes_pricing_tier_path(pricing_tier)
%br/